   issn = {02731177},
   issue = {5},
   journal = {Advances in Space Research},
   keywords = {Anti-satellite test,Ballistic parameters estimation,Collision risk evaluation,Fengyun-1C breakup,Fragments cloud evolution,Orbital debris},
   month = {9},
   pages = {545-557},
   publisher = {Elsevier Ltd},
   title = {Assessment of the consequences of the Fengyun-1C breakup in low Earth orbit},
   volume = {44},
   year = {2009}
}
