   doi = {10.1016/j.asr.2009.04.012},
   issn = {02731177},
   issue = {3},
   journal = {Advances in Space Research},
   keywords = {COSMOS,Collision avoidance,ENIVSAT,Orbit improvement,Radar tracking,Space debris,Space surveillance},
   month = {8},
   pages = {355-363},
   publisher = {Elsevier Ltd},
   title = {ESA's process for the identification and assessment of high-risk conjunction events},
