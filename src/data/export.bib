   title = {Space cultures and space imaginaries in Mexico: Anthropological dialogues with the Mexican Space Agency},
   volume = {177},
   year = {2020}
}
@article{Omaly2023,
   abstract = {The evolution of the orbital environment within the context of growing launches of any type of satellites (large-constellations, cubesats and nanosats for example) have led CNES to adopt new methods to monitor, control and/or regulate this environment. Thus, within the framework of the IADC, CNES and its partners of other agencies have for several years been investigating the possibility to characterize the space environment by one or more indices, making it possible to assess both the situation at a given moment, and its evolution with time. The specific CNES approach with the proposed tool INDIGENE, is to offer the possibility to compare the Space environment impact of a dedicated situation (for example a mission) to a reference model, within a very friendly and intuitive graphic form, and using a wide range of indicators, in addition to physical and orbital based formulations. Relying on pre-existing indices, with inherent pros and cons, the CNES index aims at taking into account - in particular - the constrains related to the French Space Operations Act (FSOA), with the ambition of being used for mission and/or space situation assessments for surveillance, control and regulation purposes. A specific application case will be given in the frame of the current work on the FSOA Technical Regulation update and its future application to space operators.},
   author = {Pierre Omaly and Nicolas Pillet and Vincent Ruch and Bruno Revelin},
