   keywords = {Edge detection,feature extraction,image processing,machine vision,multiscale image analysis},
   pages = {679-698},
   pmid = {21869365},
   title = {A Computational Approach to Edge Detection},
   volume = {PAMI-8},
   year = {1986}
}
