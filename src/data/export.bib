   publisher = {Elsevier Ltd},
   title = {Space sustainability approaches of emerging space nations: Brazil, Colombia, and Mexico},
   volume = {37},
   year = {2016}
}
@article{Trur2021,
   abstract = {The early space governance mechanisms aiming at ensuring peaceful uses of outer space opened the way to a formidable growth in space activities. These policy coordination steps achieved during the height of the Cold War can be regarded as pioneering steps towards ensuring the long-term sustainability of the space domain. Yet threats to the continued safe, secure and sustainable use of outer space have been dramatically increasing over the past decade calling for an evaluation of the existing governance mechanisms. This paper presents the intermediate results of a doctoral research on the emergence and progress of space debris governance mechanisms, the orbital debris issue being considered one of the major threats to space sustainability. An innovative international relations' framework is used drawing upon two studies, namely Peter Haas' [1] seminal work on epistemic communities' influences over international policy coordination and Thomas Weiss and Ramesh Thakur's work [2] on the United Nation's contribution to global governance gaps. The doctoral research findings highlight the essential role of ‘epistemic" knowledge experts in the emergence and evolution of cooperative steps affecting the debris issue, regarded more widely as illustrations of contributions of the epistemic model to space sustainability governance. The study's timeframe covers governance progress from the 1950s until nowadays. This research also identifies levels of governance progress achieved thanks to epistemic influences and provides avenues of thoughts for overcoming obstacles in international cooperation when national security interests are at stake.},
   author = {Aurélie Trur},
   doi = {10.1016/j.actaastro.2020.10.012},
   issn = {00945765},
   journal = {Acta Astronautica},
   keywords = {Epistemic communities,Global governance,International cooperation,Space debris,Space sustainability},
   month = {3},
   pages = {451-459},
   publisher = {Elsevier Ltd},
   title = {Governance aspects of space sustainability: The role of epistemic actors as enablers of progress},
   volume = {180},
   year = {2021}
}
@article{Paladini2021,
   abstract = {The drive toward an efficient use of finite resources and the emphasis on sustainability that characterises CE (Circular Economy) models is also shared by many space projects, as summarised decades ago with the catchphrase ‘Spaceship Earth’. Carrying out a comparison of the applications of circular economy models and the space industry's best practice, the article argues that the space sector represents a sort of ‘native environment’ for circular economy and shows how to apply more efficiently those same CE principles down to Earth. Adopting a case-study approach and using evidence from a close-loop system originally conceived for life in a space environment (ESA-MELiSSA for water treatment), this study demonstrates how the space sector is not only fully ‘CE compliant’ but also provides a comprehensive framework to further extend the remit of the CE philosophy. If the world economy is indeed at the onset of a new industrial revolution (the so-called Industry 4.0), the space sector can offer insights on how to this revolution can be made both inclusive and sustainable.},
   author = {Stefania Paladini and Krish Saha and Xavier Pierron},
   doi = {10.1016/j.jenvman.2021.112511},
   issn = {10958630},
   journal = {Journal of Environmental Management},
   keywords = {CE,Closed-loop system,ESA-MELiSSA,Industry 4.0,Space sector,Spaceship Earth,Sustainability},
   month = {7},
   pmid = {33910153},
   publisher = {Academic Press},
   title = {Sustainable space for a sustainable Earth? Circular economy insights from the space sector},
   volume = {289},
   year = {2021}
}
@article{Johnson2020,
   abstract = {In this paper, drawn from anthropological research done for a project on Mexican imaginaries of outer space, I consider the role of the AEM, or Mexican Space Agency, in space education and outreach in Mexico, focusing on the ways in which the AEM engages with different sectors and social groups, including elementary age children, college students undertaking STEM careers and artists who use space imagery and technology in their work. The research undertaken for this project consists primarily of formal and informal interviews with key actors engaged with outer space who project space into Mexican futures from different perspectives, from enthusiastic involvement in technological advancement as a means of fomenting social and economic progress, to the artistic uses of space and technology as a means of critically reflecting on earthly issues of human relationality and geopolitical power. In addition to interviews, I draw on information gathered from documents, works of art, online discussion groups and attendance at events sponsored by the Mexican Space Agency. I am particularly interested in exploring the implications of the agency's mission to “promote space culture”, as I critically confront anthropological notions of “culture” with the uses of this concept in the public sphere. I am also interested in understanding what is “Mexican” about Mexican space culture, and how national institutions and actors relate to their international counterparts.},
   author = {Anne W. Johnson},
   doi = {10.1016/j.actaastro.2020.08.002},
   issn = {00945765},
   journal = {Acta Astronautica},
   keywords = {Anthropology,Mexican space agency,Social studies of science,Space culture},
