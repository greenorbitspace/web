---
// Services.astro
const services = [
  {
    title: "Audits",
    image: "/images/services/audit.png",
    buttons: [
      { text: "Request an Audit", href: "/services/audits" },
      { text: "Learn More", href: "/services/audits#details" },
    ],
  },
  {
    title: "Training",
    image: "/images/services/training.png",
    buttons: [
      { text: "Explore Training Options", href: "/services/training" },
      { text: "Book a Session", href: "/services/training#book" },
    ],
  },
  {
    title: "Content",
    image: "/images/services/content.png",
    buttons: [
      { text: "Plan Your Content", href: "/services/content-marketing" },
      { text: "Request a Quote", href: "/services/content-marketing#quote" },
    ],
  },
  {
    title: "Strategy",
    image: "/images/services/strategy.png",
    buttons: [
      { text: "Book a Strategy Session", href: "/services/marketing-strategy" },
      { text: "Learn More", href: "/services/marketing-strategy#details" },
    ],
  },
  {
    title: "Public Relations",
    image: "/images/services/pr.png",
    buttons: [
      { text: "Book a Strategy Session", href: "/services/public-relations" },
      { text: "Learn More", href: "/services/public-relations#details" },
    ],
  },
  {
    title: "Reporting",
    image: "/images/services/reporting.png",
    buttons: [
      { text: "Book a Strategy Session", href: "/services/reporting" },
      { text: "Learn More", href: "/services/reporting#details" },
    ],
  },
  {
    title: "Materiality",
    image: "/images/services/materiality.png",
    buttons: [
      { text: "Book a Strategy Session", href: "/services/materiality" },
      { text: "Learn More", href: "/services/materiality#details" },
    ],
  },
];
---

<section id="features" class="section bg-gray-50 dark:bg-secondary-500">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-500 text-white font-medium text-sm mb-4">
        Our Services
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Digital strategy, done responsibly.</h2>
      <p class="text-gray-600 dark:text-white">
        We provide planet-positive marketing solutions designed specifically for the space sector, with built-in analytics, automation, and sustainable impact.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      {services.map((service) => (
        <div key={service.title} class="relative rounded-2xl overflow-hidden shadow-xl group flex flex-col">
          <img src={service.image} alt={service.title} class="w-full h-64 md:h-72 object-cover" />

          <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center text-center p-6 space-y-4 h-full">
            {/* Service Title as Secondary Button */}
            <a
              href={service.buttons[0].href}
              class="px-6 py-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition text-lg md:text-xl"
            >
              {service.title}
            </a>

            {/* Other buttons below title */}
            <div class="flex flex-col sm:flex-row flex-wrap gap-4 justify-center mt-auto">
              {service.buttons.slice(1).map((btn) => (
                <a
                  key={btn.text}
                  href={btn.href}
                  class="px-4 py-2 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition"
                >
                  {btn.text}
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a href="/service-catalogue" class="btn-primary inline-flex items-center justify-center">
        Explore Our Full Service Catalogue
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="white">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>