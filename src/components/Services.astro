---
const services = [
  {
    title: "Strategy & Insight",
    image: "/images/services/strategy.png",
    description: "Planet-positive marketing strategies grounded in ESG, CSR, and GRI frameworks.",
    credentials: ["ESG-aligned", "CSR-compliant", "GRI-informed"],
    buttons: [
      { text: "Book a Strategy Session", href: "/services/marketing-strategy" },
      { text: "Learn More", href: "/services/marketing-strategy#details" },
    ],
  },
  {
    title: "Creative & Content",
    image: "/images/services/content.png",
    description: "Sustainable content marketing, designed for maximum engagement with minimal environmental impact.",
    credentials: ["Carbon-conscious", "Inclusive messaging", "Responsible sourcing"],
    buttons: [
      { text: "Plan Your Content", href: "/services/content-marketing" },
      { text: "Request a Quote", href: "/services/content-marketing#quote" },
    ],
  },
  {
    title: "Engagement & Learning",
    image: "/images/services/training.png",
    description: "Workshops, masterclasses, and training programmes that embed sustainability principles across your teams.",
    credentials: ["Employee education", "Sustainable practices", "Impact reporting"],
    buttons: [
      { text: "Explore Training Options", href: "/services/training" },
      { text: "Book a Session", href: "/services/training#book" },
    ],
  },
];
---

<section id="services" class="section bg-gray-50 dark:bg-secondary-500">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-500 text-white font-medium text-sm mb-4">
        Our Services
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Digital strategy, done responsibly.</h2>
      <p class="text-gray-600 dark:text-white">
        Planet-positive marketing solutions for the space sector. Analytics, automation, and sustainable impact built-in.
      </p>
    </div>

    <!-- Responsive grid instead of horizontal scroll -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div
          key={service.title}
          class="rounded-2xl overflow-hidden shadow-xl group flex flex-col"
        >
          <img src={service.image} alt={service.title} class="w-full h-64 object-cover" />

          <div class="flex flex-col items-center text-center p-6 space-y-4">
            <h3 class="text-xl md:text-2xl font-semibold text-gray-900 dark:text-white">{service.title}</h3>
            <p class="text-gray-700 dark:text-white text-sm md:text-base">{service.description}</p>

            <div class="flex flex-wrap justify-center gap-2 mt-2">
              {service.credentials.map((cred) => (
                <span key={cred} class="px-3 py-1 bg-accent-500 text-white text-xs rounded-full">
                  {cred}
                </span>
              ))}
            </div>

            <div class="flex flex-col sm:flex-row gap-4 justify-center mt-auto">
              {service.buttons.map((btn) => (
                <a
                  key={btn.text}
                  href={btn.href}
                  class="px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition"
                >
                  {btn.text}
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a href="/service-catalogue" class="btn-primary inline-flex items-center justify-center">
        Explore Our Full Service Catalogue
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="white">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>