---
// src/components/Schema/GlobalSchema.astro
import { SITE } from '@/config'
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": SITE.name,
  "url": SITE.url,
  "logo": `${SITE.url}/logo.png`,
  "sameAs": [...SITE.social],
  "publishingPrinciples": `${SITE.url}/about/publishing-principles`,
  "hasCredential": [
    {
      "@type": "EducationalOccupationalCredential",
      "credentialCategory": "ProfessionalCertification",
      "name": "Chartered Marketer (CMktr)",
      "url": "https://www.cim.co.uk/membership/chartered-marketer/"
    }
  ]
}
---
<script type="application/ld+json">
  {JSON.stringify(jsonLd)}
</script>