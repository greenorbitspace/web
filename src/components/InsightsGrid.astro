---
export interface Props {
  entries: any[];
}
const { entries } = Astro.props;
---

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {entries.map(({ data, slug, collection }) => (
    <article class="border rounded-lg p-4 shadow-sm hover:shadow-md transition">
      <h2 class="text-xl font-semibold mb-1">
        <a href={`/${collection}/${slug ?? ''}`} class="hover:underline">
          {data.title}
        </a>
      </h2>
      <p class="text-sm text-gray-500 mb-2">{collection.replace('-', ' ').toUpperCase()} â€¢ {data.pubdate}</p>
      <p class="text-gray-700 text-sm line-clamp-3">{data.description ?? ''}</p>
    </article>
  ))}
</div>