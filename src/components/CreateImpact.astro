---
interface CTAProps {
  title?: string
  description?: string
  primaryLabel?: string
  primaryHref?: string
  secondaryLabel?: string
  secondaryHref?: string
}

const {
  title = "Let’s create impact together.",
  description = "Join innovative organisations across the space sector accelerating their growth with sustainable marketing strategies. Let’s explore how we can help you deliver measurable outcomes.",
  primaryLabel = "Book a Discovery Call",
  primaryHref = "https://cal.com/rjmlaird",
  secondaryLabel = "Explore Our Service Catalogue",
  secondaryHref = "/service-catalogue",
} = Astro.props
---

<!-- CTA -->
<div class="mt-16 text-center">
  <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
    {title}
  </h3>
  <p class="text-gray-600 dark:text-white mb-8 max-w-2xl mx-auto">
    {description}
  </p>
  <div class="flex flex-col sm:flex-row justify-center gap-4">
    <a href={primaryHref} class="btn-primary">{primaryLabel}</a>
    <a href={secondaryHref} class="btn-secondary">{secondaryLabel}</a>
  </div>
</div>