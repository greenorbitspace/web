---
export interface Props {
  tags: string[];
  activeTag: string | null;
}
const { tags, activeTag } = Astro.props;
---

<div class="mb-6 flex flex-wrap gap-2">
  <a href="/insights" class="px-3 py-1 rounded-full border text-sm transition
    {activeTag ? 'bg-white text-gray-600 border-gray-300 hover:bg-gray-100' : 'bg-blue-600 text-white'}">
    All
  </a>
  {tags.map(tag => (
    <a
      href={`/insights?tag=${encodeURIComponent(tag)}`}
      class={`px-3 py-1 rounded-full border text-sm transition
        ${activeTag === tag ? 'bg-blue-600 text-white' : 'bg-white text-gray-600 border-gray-300 hover:bg-gray-100'}`}
    >
      {tag}
    </a>
  ))}
</div>