---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';

const stripeHTML = `
  <script async src="https://js.stripe.com/v3/pricing-table.js"></script>
  <stripe-pricing-table
    pricing-table-id="prctbl_1RjhVYE9V0wpcpD5TWUgwj6Z"
    publishable-key="pk_live_51RZOfOE9V0wpcpD5X5hZuiXbtRoCa2cMhcILadCbF63npB6O4NdpjKVTqsSBnqx9vrOTWHbgven6dUnGVoVDuhMT00TO8eklxX">
  </stripe-pricing-table>
`;
---

<Layout title="Audits Pricing">
  <Header />

  <main class="py-16">

    <!-- Hero / Introduction -->
    <HeroSection
      title="Audits That Reveal Opportunity"
      description="Select a plan for audits that combine precision, insight, and sustainability. Our services help you identify gaps, optimise performance, and take actionable steps towards impact."
      class="bg-primary-500 text-white py-24"
    />

    <!-- Background / Value Proposition -->
    <section class="my-16 bg-secondary-500 text-white py-16">
      <div class="max-w-3xl mx-auto px-4 text-center">
        <h2 class="text-2xl font-semibold mb-6">Why Choose Our Audit Services?</h2>
        <p class="mb-8">
          Comprehensive audits provide clarity and actionable recommendations. We analyse performance, measure sustainability impact, and deliver reports that help organisations make data-driven decisions with confidence.
        </p>
        <ul class="grid grid-cols-1 md:grid-cols-3 gap-8 text-left">
          <li class="flex items-start gap-3">
            <span class="text-white text-2xl">üîç</span>
            <span><strong>Insightful Analysis:</strong> Identify strengths, weaknesses, and opportunities across your operations.</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-white text-2xl">üìà</span>
            <span><strong>Actionable Recommendations:</strong> Turn audit findings into clear next steps for improvement.</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-white text-2xl">üå±</span>
            <span><strong>Sustainability-Focused:</strong> Evaluate environmental and ESG impact alongside operational efficiency.</span>
          </li>
        </ul>
      </div>
    </section>

    <!-- Pricing Table (Full Width) -->
    <section class="my-16 bg-primary-500 text-white w-full py-16">
      <h2 class="text-2xl font-semibold text-center mb-8">Plans & Pricing</h2>
      <div class="px-4" set:html={stripeHTML} />
    </section>

    <!-- Call-to-Action -->
    <section class="bg-accent-500 py-16 text-white">
      <div class="max-w-3xl mx-auto px-4 text-center">
        <h2 class="text-2xl font-semibold mb-6">Act on Insights Today</h2>
        <p class="mb-8">
          Partner with us to conduct audits that uncover gaps, reveal opportunities, and enable measurable impact. Make informed decisions that drive performance and sustainability.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="/contact" class="bg-white text-primary-500 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
            Get in Touch
          </a>
          <a href="/faq" class="border border-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-accent-500 transition">
            Learn More
          </a>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>