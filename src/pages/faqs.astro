---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';

// Import the React FAQ component
import FAQSearch from '../components/FAQSearch.jsx';
---

<Layout title="Frequently Asked Questions">
  <Header />

  <main class="py-8">
    <HeroSection 
      title="Frequently Asked Questions" 
      highlightText="Questions"
      description="Find answers to common questions about Sassify and our services."
    />

    <!-- Insert React FAQ component here -->
    <section class="py-16 bg-white dark:bg-secondary-500">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <FAQSearch client:load />
        </div>
      </div>
    </section>

    <section class="py-16 bg-white dark:bg-secondary-500">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mt-16">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Still have questions?</h3>
            <p class="text-gray-600 dark:text-white mb-8">
              Our team is here to help. Contact us and we'll get back to you as soon as possible.
            </p>
            <a href="/contact" class="btn-primary">Contact Support</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>