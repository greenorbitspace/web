---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PillarCard from '../../components/PillarCard.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Space Sustainability Pillars | Green Orbit Digital</title>
  </head>
  <body class="bg-gray-900 text-white font-sans">

    <Header currentPage="pillars" />

    <main class="p-6 max-w-6xl mx-auto mt-12">

      <!-- Pillars Triangle Layout -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 items-start text-center">

        <PillarCard
          title="From Space"
          description="Leveraging space data and applications to tackle global challenges such as climate monitoring and the Sustainable Development Goals."
          href="/from-space"
        />

        <PillarCard
          title="In Space"
          description="Championing responsible orbital use â€” debris mitigation, traffic management, and extending satellite lifetimes with servicing and reuse."
          href="/in-space"
        />

        <PillarCard
          title="For Space"
          description="Minimising Earth impacts from launches, manufacturing, and re-entry, while aligning with planetary boundaries and net-zero commitments."
          href="/for-space"
        />

      </div>

      <!-- Optional SVG triangle -->
      <div class="relative mt-12 w-full h-64 hidden md:block">
        <svg class="absolute inset-0 w-full h-full" viewBox="0 0 600 300" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line x1="100" y1="50" x2="300" y2="250" stroke="#ffffff80" stroke-width="2"/>
          <line x1="300" y1="250" x2="500" y2="50" stroke="#ffffff80" stroke-width="2"/>
          <line x1="500" y1="50" x2="100" y2="50" stroke="#ffffff80" stroke-width="2"/>
        </svg>
      </div>

    </main>

    <Footer />

  </body>
</html>