---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.jsx';

// Dynamic routing: generate paths for all case studies
export async function getStaticPaths() {
  const caseStudies = await Astro.glob('../../content/case-studies/*.md');

  return caseStudies.map((c) => ({
    params: { slug: c.frontmatter.slug },
  }));
}

// Get the current slug
const { slug } = Astro.params;

// Load all case studies again for the page content
const caseStudies = await Astro.glob('../../content/case-studies/*.md');

// Find the current case study by slug
const study = caseStudies.find((c) => c.frontmatter.slug === slug);

if (!study) {
  throw new Error(`Case study not found for slug: ${slug}`);
}

const {
  title,
  summary,
  category,
  featuredImage = '/images/default-featured.jpg',
  metrics = [],
  pubdate,
  author
} = study.frontmatter;
---

<Layout title={title} description={summary}>
  <Header />

  <!-- Hero Section -->
  <section class="relative w-full h-[400px] sm:h-[500px] lg:h-[600px] flex items-center justify-center overflow-hidden mb-12">
    <div
      class="absolute inset-0 bg-cover bg-center"
      style={`background-image: url(${featuredImage});`}
      aria-hidden="true"
    ></div>
    <div class="absolute inset-0 bg-black/50" aria-hidden="true"></div>
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl space-y-4">
      {category && (
        <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-accent-500 text-secondary-500 dark:text-white font-medium text-sm">
          {category}
        </span>
      )}
      <h1 class="text-4xl sm:text-5xl font-extrabold text-white drop-shadow-lg">{title}</h1>
      {summary && <p class="text-lg sm:text-xl text-white drop-shadow">{summary}</p>}
    </div>
  </section>

  <main class="py-16 w-full container-custom bg-white dark:bg-primary-500 space-y-12">
    <div class="max-w-5xl mx-auto">

      {metrics.length > 0 && (
        <div class="flex flex-wrap gap-4 mb-8">
          {metrics.map((metric, idx) => (
            <div class="flex items-center" key={idx}>
              <svg class="w-5 h-5 text-primary-600 dark:text-accent-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700 dark:text-white">{metric}</span>
            </div>
          ))}
        </div>
      )}

      <article class="prose prose-lg dark:prose-invert max-w-full">
        <study.Content />
      </article>

      {pubdate && author && (
        <p class="mt-12 text-sm text-gray-500 dark:text-white">
          Published on {new Date(pubdate).toLocaleDateString()} by {author}
        </p>
      )}

      <div class="mt-8">
        <a href="/case-studies" class="btn-accent">‚Üê Back to Case Studies</a>
      </div>
    </div>
  </main>
    <!-- Request Audit CTA -->
    <section class="w-full bg-secondary-500 py-16 text-white text-center">
          <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-accent-500 mb-4">Request Your Audit</h2>
      <p class="text-gray-700 dark:text-white mb-6">Take the next step in diagnosing and optimising your digital presence sustainably. Explore options and book an audit tailored to your business needs.</p>
      <CTA text="Explore Audit Options" link="/service-catalogue#audits" client:load />
      </div>
    </section>
  <Footer />
</Layout>