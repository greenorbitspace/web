---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import HeroSection from '../../components/HeroSection.astro';
---

<Layout title="Space" description="Explore satellites, space missions, agencies, and innovations shaping the cosmos.">
  <HeroSection 
    title="Space" 
    description="Discover the latest in satellites, space missions, and innovations driving exploration beyond Earth."
  />

  <section class="py-12 max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold mb-6">Explore</h2>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <a href="/space/satellites" class="hover:shadow-lg transition-shadow">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">Satellites</h3>
          <p>Information about Earth observation, communication, and research satellites.</p>
        </div>
      </a>
      <a href="/space/missions" class="hover:shadow-lg transition-shadow">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">Missions</h3>
          <p>Past, present, and upcoming space missions across the globe.</p>
        </div>
      </a>
      <a href="/space/agencies" class="hover:shadow-lg transition-shadow">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">Agencies</h3>
          <p>Explore space agencies, research centers, and private companies leading space exploration.</p>
        </div>
      </a>
      <a href="/space/innovations" class="hover:shadow-lg transition-shadow">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
          <h3 class="text-xl font-semibold mb-2">Innovations</h3>
          <p>Latest technologies and breakthroughs advancing the future of space.</p>
        </div>
      </a>
    </div>
  </section>
</Layout>