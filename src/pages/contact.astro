---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import SocialLinks from '../components/SocialLinks.astro';
import ContactInfo from '../components/ContactInfo.astro';
import socials from '../data/schema/socials.json'; // <-- import your JSON

const contactInfo = [
  {
    icon: 'Location',
    title: 'Registered address',
    text: 'DOCK - Space City, 75 Exploration Drive, Leicester LE4 5NU',
  },
  {
    icon: 'ID',
    title: 'Company number',
    text: '15207389 (England and Wales)',
  },
  {
    icon: 'VAT',
    title: 'VAT number',
    text: 'GB462243312',
  },
  {
    icon: 'Phone',
    title: 'Phone',
    text: '+44 (0)116 4830155',
  },
];
---

<Layout title="Contact Us">
  <Header />

  <main class="py-12">
    <HeroSection 
      title="Contact Us"
      description="We're here to help with any questions about our services or collaboration opportunities. Reach out to us anytime."
    />

    <section id="contact" class="section bg-gray-50 dark:bg-secondary-500 py-12">
      <div class="container-custom">
        <div class="grid md:grid-cols-2 gap-12">

          <div class="slide-up space-y-8">
            <span class="inline-block px-4 py-1 rounded-full bg-accent-500 text-primary-500 dark:text-white font-medium text-sm">
              Get In Touch
            </span>

            <div class="space-y-4">
              <h2 class="text-3xl font-bold text-black dark:text-white">
                We'd Love to Hear From You
              </h2>
              <p class="text-gray-600 dark:text-gray-300">
                Whether you have questions about our services, want to explore collaboration opportunities, or simply want to chat about sustainability in the space industry, weâ€™re here for you.
              </p>
            </div>

            {/** Contact Info Blocks */}
            <ContactInfo items={contactInfo} size="w-5 h-5" gap="gap-3" />

            {/** Social Links from socials.json */}
            <div>
              <h3 class="text-lg font-semibold text-black dark:text-white mb-4">Follow Us</h3>
              <SocialLinks socials={socials} size="w-6 h-6" gap="gap-4" />
            </div>
          </div>

          {/** HubSpot Form Embed */}
          <div class="hubspot-form-container">
            <script charset="utf-8" type="text/javascript" src="//js-eu1.hsforms.net/forms/embed/v2.js"></script>
            <script is:inline>
              hbspt.forms.create({
                portalId: "143471159",
                formId: "44d27b21-079d-4b8d-9c13-975f98491a14",
                region: "eu1",
                target: ".hubspot-form-container"
              });
            </script>
          </div>

        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>