---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import researchData from "../../public/data/research.json";
import SearchableLibrary from "../components/SearchableLibrary.jsx";
---

<Layout title="Library">
  <Header />

  <main class="py-12 max-w-6xl mx-auto px-4">
    <HeroSection 
      title="Library" 
      description="Discover all space, sustainability, and marketing events we are organising or attending." 
    />

    <!-- Render the React Island -->
    <SearchableLibrary client:load researchData={researchData} />
  </main>

  <Footer />
</Layout>