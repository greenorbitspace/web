---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
// React component for the SDG grid
import SpaceApps from '../components/SpaceApps.jsx';
---

<Layout title="Space Applications" description="Thanks for your purchase!">
  <Header />

  <main class="py-12 max-w-6xl mx-auto px-4">
    <HeroSection
      title="Space Applications"
      description="Thanks for your purchase!"
    />

    <section class="mt-12">
      <SpaceApps client:visible />
    </section>
  </main>

  <Footer />
</Layout>