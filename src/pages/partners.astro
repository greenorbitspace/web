---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import OrganisationsList from '../components/OrganisationsList.jsx';
import allOrganisations from '../data/organisations.json';

// Filter to partners only (still server-side)
const partners = allOrganisations.filter(org => org.Type === 'partner');

// Sort alphabetically
const sortedPartners = partners.slice().sort((a, b) =>
  (a.Organisation ?? '').localeCompare(b.Organisation ?? '')
);
---

<Layout title="Partners" description="Explore our strategic and delivery partners in the space sector.">
  <Header />

  <main class="py-12 max-w-6xl mx-auto px-4">
    <HeroSection 
      title="Partners" 
      description="Explore our strategic and delivery partners in the space sector." 
    />

    <!-- Hydrated client-side component -->
    <section class="py-16 bg-white dark:bg-secondary-500">
    
      <OrganisationsList organisations={sortedPartners} client:load />
    </section>
  </main>

  <Footer />
</Layout>