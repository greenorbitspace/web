---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import OrganisationsList from '../components/OrganisationsList.jsx';
import allOrganisations from '../data/organisations.json';

// Filter to organisations only (still server-side)
const organisations = allOrganisations.filter(org => org.Type === 'organisation');

// Sort alphabetically
const sortedOrganisations = organisations.slice().sort((a, b) =>
  (a.Organisation ?? '').localeCompare(b.Organisation ?? '')
);
---

<Layout title="Organisations" description="Explore our strategic and delivery organisations in the space sector.">
  <Header />

  <main class="py-12 max-w-6xl mx-auto px-4">
    <HeroSection 
      title="Organisations" 
      description="Explore our strategic and delivery organisations in the space sector." 
    />

    <!-- Hydrated client-side component -->
    <section class="mt-8">
      <OrganisationsList organisations={sortedOrganisations} client:load />
    </section>
  </main>

  <Footer />
</Layout>