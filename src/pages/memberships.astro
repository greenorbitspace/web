---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import OrganisationsList from '../components/OrganisationsList.jsx';
import allOrganisations from '../data/organisations.json';

// Filter to memberships only (still server-side)
const memberships = allOrganisations.filter(org => org.Type === 'member');

// Sort alphabetically
const sortedMemberships = memberships.slice().sort((a, b) =>
  (a.Organisation ?? '').localeCompare(b.Organisation ?? '')
);
---

<Layout title="memberships" description="Explore our strategic and delivery memberships in the space sector.">
  <Header />

  <main class="py-12">
    <!-- Hero Section -->
    <div class="max-w-6xl mx-auto px-4">
      <HeroSection 
        title="Memberships" 
        description="Explore our strategic and delivery memberships in the space sector." 
      />
    </div>

    <!-- Memberships Section (full-width background, centered content) -->
    <section class="py-16 bg-white dark:bg-secondary-500">
      <div class="max-w-6xl mx-auto px-4">
        <OrganisationsList organisations={sortedMemberships} client:load />
      </div>
    </section>
  </main>
    <!-- Full-Width CTA -->
    <section class="w-full bg-secondary-500 py-16 text-white text-center">
      <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Ready to collaborate?</h2>
        <p class="mb-8 text-lg sm:text-xl text-gray-200">Letâ€™s drive responsible growth for your organisation. Get in touch for a custom package or exploratory call.</p>
        <a href="/contact" class="inline-block w-full sm:w-auto px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition text-lg sm:text-xl">Contact Us</a>
      </div>
    </section>
  <Footer />
</Layout>
