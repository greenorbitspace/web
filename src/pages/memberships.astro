---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import OrganisationsList from '../components/OrganisationsList.jsx';
import allOrganisations from '../data/organisations.json';

// Filter to memberships only (still server-side)
const memberships = allOrganisations.filter(org => org.Type === 'member');

// Sort alphabetically
const sortedMemberships = memberships.slice().sort((a, b) =>
  (a.Organisation ?? '').localeCompare(b.Organisation ?? '')
);
---

<Layout title="memberships" description="Explore our strategic and delivery memberships in the space sector.">
  <Header />

  <main class="py-12">
    <!-- Hero Section -->
    <div class="max-w-6xl mx-auto px-4">
      <HeroSection 
        title="Memberships" 
        description="Explore our strategic and delivery memberships in the space sector." 
      />
    </div>

    <!-- Memberships Section (full-width background, centered content) -->
    <section class="py-16 bg-white dark:bg-secondary-500">
      <div class="max-w-6xl mx-auto px-4">
        <OrganisationsList organisations={sortedMemberships} client:load />
      </div>
    </section>
  </main>

  <Footer />
</Layout>
