---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.jsx';

// Generate static paths for all sectors
export async function getStaticPaths() {
  const sectors = await Astro.glob('../../content/sectors/*.md');
  return sectors.map((sector) => ({
    params: { slug: sector.frontmatter.slug },
  }));
}

// Get current slug from URL
const { slug } = Astro.params;

// Load all sectors
const sectors = await Astro.glob('../../content/sectors/*.md');

// Find the current sector
const sector = sectors.find((s) => s.frontmatter.slug === slug);

if (!sector) {
  throw new Error(`Sector not found for slug: ${slug}`);
}

// Destructure frontmatter and access Markdown content
const { name, description = '', featuredImage = '/images/default-featured.jpg' } = sector.frontmatter;
const content = sector.compiledContent;
---

<Layout title={name} description={description}>
  <Header />

  <!-- Hero Section -->
  <section class="relative w-full h-[400px] sm:h-[500px] lg:h-[600px] flex items-center justify-center overflow-hidden mb-16">
    <div class="absolute inset-0 bg-cover bg-center" style={`background-image: url(${featuredImage});`} aria-hidden="true"></div>
    <div class="absolute inset-0 bg-black/50" aria-hidden="true"></div>
    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl space-y-4">
      <h1 class="text-5xl sm:text-6xl font-extrabold text-white drop-shadow-lg">{name}</h1>
      {description && <p class="text-xl sm:text-2xl text-gray-200 drop-shadow">{description}</p>}
    </div>
  </section>

  <!-- Markdown Content -->
  <main class="container-custom max-w-4xl mx-auto space-y-8 bg-primary-500">
    <article class="prose prose-lg dark:prose-invert max-w-full">
      <div innerHTML={content} />
    </article>
          <div class="mt-8">
        <a href="/sectors" class="btn-accent">‚Üê Back to Sectors</a>
      </div>
  </main>


  <!-- CTA Section -->
  <section class="w-full bg-secondary-500 py-16 text-white text-center mt-16">
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-accent-500 mb-4">Request Your Audit</h2>
      <p class="text-gray-200 mb-6">
        Take the next step in diagnosing and optimising your digital presence sustainably. Explore options and book an audit tailored to your business needs.
      </p>
      <CTA text="Explore Audit Options" link="/service-catalogue#audits" client:load />
    </div>
  </section>

  <Footer />
</Layout>