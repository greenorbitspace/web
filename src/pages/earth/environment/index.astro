---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import CardGrid from '../../../components/CardGrid.astro';

const pageData = {
  title: "Environment | Green Orbit Digital",
  description: "Monitoring key environmental variables and ecosystem health.",
  ogImage: "/images/environment-cover.jpg",
  canonical: "https://greenorbit.space/earth/environment"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />

  <main class="py-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Hero Section -->
  <HeroSection 
    title="Environment"
    highlightText="Environment"
    subtitle="Tracking environmental conditions, ecosystem health, and sustainability initiatives."
  />

  <!-- Key Environment Domains -->
    <section class="mb-12">
      <h2 class="text-3xl font-semibold mb-6">Key Environment Domains</h2>
      <CardGrid cards={[
        { title: "Atmosphere", description: "Monitoring air quality, gases, and atmospheric processes.", link: "/earth/environment/atmosphere", color: "bg-green-600" },
        { title: "Land", description: "Tracking land use, deforestation, and soil health.", link: "/earth/environment/land", color: "bg-emerald-500" },
        { title: "Ocean", description: "Observing ocean temperature, currents, and marine ecosystems.", link: "/earth/environment/ocean", color: "bg-cyan-500" }
      ]} />
    </section>

    <!-- Why It Matters -->
    <section class="mb-12 text-white">
      <h2 class="text-3xl font-semibold mb-4">Why Environment Monitoring Matters</h2>
      <ul class="list-disc ml-6 space-y-2">
        <li><strong>Air Quality:</strong> Ensure healthy and safe atmospheric conditions.</li>
        <li><strong>Land Management:</strong> Track land use, soil health, and deforestation.</li>
        <li><strong>Water Resources:</strong> Protect freshwater, rivers, and watersheds.</li>
        <li><strong>Biodiversity:</strong> Preserve species and ecosystems.</li>
        <li><strong>Pollution Control:</strong> Reduce emissions and manage waste effectively.</li>
      </ul>
    </section>

    <!-- Call to Action -->
    <section class="text-white">
      <h2 class="text-3xl font-semibold mb-4">Get Started</h2>
      <p>
        Green Orbit Digital integrates environmental monitoring and digital analytics into your operations. 
        <a href="/contact" class="text-green-400 font-semibold hover:underline">Contact us</a> to start your sustainability journey.
      </p>
    </section>
  </main>

  <Footer />
</Layout>