---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import LandContent from '../../../content/earth/environment/land.md';

const pageData = {
  title: "Land | Green Orbit Digital",
  description: "Monitoring land use, forest management, water resources, agriculture, ecosystem restoration, and climate adaptation.",
  ogImage: "/images/land-cover.jpg",
  canonical: "https://greenorbit.space/earth/land"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Land"
    subtitle="Sustainable management of forests, agriculture, ecosystems, and urban planning."
  />

  <main class="prose lg:prose-xl mx-auto p-8 text-white">
    <!-- Embed Markdown content -->
    <LandContent />
  </main>

  <Footer />
</Layout>