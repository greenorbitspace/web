---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import OceanContent from '../../../content/earth/environment/ocean.md';

const pageData = {
  title: "Ocean | Green Orbit Digital",
  description: "Exploring the role of oceans in sustainability, from blue economy innovation to green ocean restoration and climate resilience.",
  ogImage: "/images/ocean-cover.jpg",
  canonical: "https://greenorbit.space/earth/ocean"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Ocean"
    subtitle="Exploring the oceans' role in sustainability and climate resilience."
  />

  <main class="prose lg:prose-xl mx-auto p-8 text-white">
    <!-- Embed Markdown content -->
    <OceanContent />
  </main>

  <Footer />
</Layout>