---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import EmergencyContent from '../../../content/earth/emergency/index.md';

const pageData = {
  title: "Emergency | Green Orbit Digital",
  description: "Monitoring and early warning systems for floods, forest fires, and droughts.",
  ogImage: "/images/emergency-cover.jpg",
  canonical: "https://greenorbit.space/earth/emergency"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Emergency"
    subtitle="Monitoring and early warning systems for floods, forest fires, and droughts."
  />

  <main class="prose lg:prose-xl mx-auto p-8 text-white">
    <!-- Embed Markdown content -->
    <EmergencyContent />
  </main>

  <Footer />
</Layout>