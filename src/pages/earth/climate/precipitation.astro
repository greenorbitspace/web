---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import EarthInfo from '../../../components/EarthInfo.astro';
import grayMatter from 'gray-matter';
import EarthContentRaw from '../../../content/earth/climate/precipitation.md?raw';

// Parse Markdown frontmatter and content
const { content, data: frontmatter } = grayMatter(EarthContentRaw);
---

<Layout title={`${frontmatter.title ?? 'Earth Sustainability'} - Green Orbit Digital`}>
  <Header />

  <main class="py-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Hero Section -->
    <HeroSection 
      title={frontmatter.title ?? "Earth Sustainability"} 
      description={frontmatter.description ?? ""}
    />

    <!-- Content Section -->
    <EarthInfo content={content} frontmatter={frontmatter} />

  </main>

  <Footer />
</Layout>