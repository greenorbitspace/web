---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import GreenhouseGasesContent from '../../../content/earth/climate/greenhouse-gases.md';

const pageData = {
  title: "Greenhouse Gases | Green Orbit Digital",
  description: "Monitoring and analysis of key greenhouse gases and their impact on climate change.",
  ogImage: "/images/greenhouse-gases-cover.jpg",
  canonical: "https://greenorbit.space/earth/climate/greenhouse-gases"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Greenhouse Gases"
    subtitle="Tracking CO₂, CH₄, N₂O, and other gases to understand climate impacts."
  />

  <main class="prose lg:prose-xl mx-auto p-8 text-white">
    <!-- Embed Markdown content -->
    <GreenhouseGasesContent />
  </main>

  <Footer />
</Layout>