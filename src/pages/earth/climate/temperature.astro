---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import TemperatureContent from '../../../content/earth/climate/temperature.md';

const pageData = {
  title: "Temperature | Green Orbit Digital",
  description: "Monitoring global and regional temperature patterns and their impact on climate.",
  ogImage: "/images/temperature-cover.jpg",
  canonical: "https://greenorbit.space/earth/climate/temperature"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Temperature"
    subtitle="Tracking global and regional temperature patterns and their effects on climate systems."
  />

  <main class="prose lg:prose-xl mx-auto p-8 text-white">
    <!-- Embed Markdown content -->
    <TemperatureContent />
  </main>

  <Footer />
</Layout>