---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';

const pageData = {
  title: "Climate | Green Orbit Digital",
  description: "Monitoring and analyzing climate variables, risks, and renewable energy solutions.",
  ogImage: "/images/climate-cover.jpg",
  canonical: "https://greenorbit.space/earth/climate"
};

const climatePages = [
  { title: "Temperature", slug: "/earth/climate/temperature" },
  { title: "Precipitation", slug: "/earth/climate/precipitation" },
  { title: "Carbon Cycle", slug: "/earth/climate/carbon-cycle" },
  { title: "Greenhouse Gases", slug: "/earth/climate/greenhouse-gases" },
  { title: "Cryosphere", slug: "/earth/climate/cryosphere" },
  { title: "Climate Risk", slug: "/earth/climate/climate-risk" },
  { title: "Renewable Energy", slug: "/earth/climate/renewable-energy" }
];
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Climate"
    subtitle="Monitoring climate variables, risks, and renewable energy solutions."
  />

  <main class="prose lg:prose-xl mx-auto p-8">
    <section class="mb-8">
      <p>
        The Climate section covers key environmental variables, climate risks, and mitigation strategies.
        Explore the topics below to understand our planetâ€™s climate system:
      </p>
    </section>

    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {climatePages.map(page => (
        <a href={page.slug} class="block p-6 border rounded-lg hover:shadow-lg transition">
          <h3 class="text-xl font-semibold">{page.title}</h3>
          <p>Learn more about {page.title.toLowerCase()}.</p>
        </a>
      ))}
    </section>
  </main>

  <Footer />
</Layout>