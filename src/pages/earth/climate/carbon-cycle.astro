---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import CarbonCycleContent from '../../../content/earth/climate/carbon-cycle.md';

const pageData = {
  title: "Carbon Cycle | Green Orbit Digital",
  description: "Monitoring the natural and anthropogenic carbon cycle and its role in climate change.",
  ogImage: "/images/carbon-cycle-cover.jpg",
  canonical: "https://greenorbit.space/earth/climate/carbon-cycle"
};
---

<Layout
  title={pageData.title}
  description={pageData.description}
  ogImage={pageData.ogImage}
  canonical={pageData.canonical}
>
  <Header />
  <HeroSection 
    title="Carbon Cycle"
    subtitle="Understanding the movement of carbon through atmosphere, oceans, and land, and its impact on climate."
  />

  <main class="prose lg:prose-xl mx-auto p-8 text-white">
    <!-- Embed Markdown content -->
    <CarbonCycleContent />
  </main>

  <Footer />
</Layout>