---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import HeroSection from '../../../components/HeroSection.astro';
import SecurityContent from '../../../content/earth/security/index.md';

const pageData = {
  title: "Security | Green Orbit Digital",
  description: "Monitoring border and maritime security, and supporting EO-based research and development.",
  ogImage: "/images/security-cover.jpg",
