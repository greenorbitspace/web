import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="Events">
  <Header />
  <main>
    <HeroSection 
      title="Green Orbit Digital Events" 
      highlightText="Green Orbit Digital"
      description="We're on a mission to empower businesses to drive global sustainability through innovative marketing and space-driven solutions."
    />
    
    <section class="py-16 bg-white dark:bg-primary-500">
    <!-- Ticket Tailor Widget. Paste this into your website where you want the widget to appear. Do not change the code or the widget may not work properly. -->
