---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';

const services = [
  {
    title: "Strategy & Insight",
    image: "/images/services/strategy.png",
    description: "Planet-positive marketing strategies grounded in ESG, CSR, and GRI frameworks, designed to align growth with sustainable impact.",
    highlights: [
      "ESG-aligned strategic planning",
      "Audience & messaging frameworks",
      "OKR-focused campaign guidance"
    ],
    cta: { text: "Book a Strategy Session", href: "/services/marketing-strategy" }
  },
  {
    title: "Creative & Content",
    image: "/images/services/content.png",
    description: "Sustainability-conscious content marketing that informs, inspires, and reduces environmental impact.",
    highlights: [
      "Low-carbon web copywriting",
      "SEO & accessibility optimised",
      "Campaign content + evergreen assets"
    ],
    cta: { text: "Plan Your Content", href: "/services/content-marketing" }
  },
  {
    title: "Engagement & Learning",
    image: "/images/services/training.png",
    description: "Workshops, masterclasses, and training programs that embed sustainability principles across your teams.",
    highlights: [
      "SDG-compliant course design",
      "Practical tools & frameworks provided",
      "Tailored to teams & tech startups"
    ],
    cta: { text: "Explore Training Options", href: "/services/training" }
  }
];
---

<Layout title="Services">
  <Header />

  <main class="py-16 w-full container-custom bg-primary-500 space-y-24">
    <HeroSection 
      title="Services"
      description="Strategic, sustainable marketing support for the space sector and climate-conscious innovators"
    />

    <section class="space-y-16">
      {services.map(service => (
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class={services.indexOf(service) % 2 === 0 ? "" : "order-2 md:order-1"}>
            <img src={service.image} alt={service.title} class="w-full h-auto rounded-lg shadow-xl" />
          </div>
          <div class={services.indexOf(service) % 2 === 0 ? "" : "order-1 md:order-2"}>
            <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-accent-500 text-secondary-600 dark:text-white font-medium text-sm mb-4">
              {service.title}
            </span>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{service.title}</h2>
            <p class="text-gray-600 dark:text-white mb-6">{service.description}</p>
            <div class="flex flex-col gap-4 mb-6">
              {service.highlights.map(highlight => (
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-600 dark:text-accent-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-700 dark:text-white">{highlight}</span>
                </div>
              ))}
            </div>
            <a href={service.cta.href} class="btn-primary">{service.cta.text}</a>
          </div>
        </div>
      ))}
    </section>
  </main>

  <!-- Full-Width CTA Section -->
  <section class="w-full bg-secondary-500 py-16 text-white text-center">
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">Ready to collaborate?</h2>
      <p class="mb-8 text-lg sm:text-xl text-gray-200">Letâ€™s drive responsible growth for your organisation. Get in touch for a custom package or exploratory call.</p>
      <a href="/contact" class="inline-block w-full sm:w-auto px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition text-lg sm:text-xl">
        Contact Us
      </a>
    </div>
  </section>

  <Footer />
</Layout>