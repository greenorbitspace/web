publishable-key="pk_live_51RZOfOE9V0wpcpD5X5hZuiXbtRoCa2cMhcILadCbF63npB6O4NdpjKVTqsSBnqx9vrOTWHbgven6dUnGVoVDuhMT00TO8eklxX">
</stripe-pricing-table>

    <!-- Request Audit CTA -->
    <section class="text-center max-w-3xl mx-auto">
      <h2 class="text-3xl font-bold text-accent-500 mb-4">Request Your Audit</h2>
      <p class="text-gray-700 dark:text-gray-300 mb-6">Take the next step in diagnosing and optimising your digital presence sustainably. Explore options and book an audit tailored to your business needs.</p>
      <CTA text="Explore Audit Options" link="/service-catalogue#audits" client:load />
    </section>

  </main>

  <Footer />
</Layout>