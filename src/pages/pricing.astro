---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';

// Stripe-compatible React component
import PricingTable from '../components/PricingTableClient.jsx';
---

<Layout title="Pricing">
  <Header />

  <main class="py-12">
    <HeroSection 
      title="Pricing" 
      description="Choose a plan that fits your mission. All options include a 14-day free trialâ€”no credit card required." 
    />

    <section 
      id="pricing-section"
      class="container mx-auto px-6 py-12 max-w-7xl"
      aria-labelledby="pricing-heading"
    >
      <h2 id="pricing-heading" class="sr-only">Pricing Plans</h2>
      <PricingTable client:load />
    </section>
  </main>

  <Footer />
</Layout>