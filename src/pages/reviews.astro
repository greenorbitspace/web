---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
import reviews from '../data/reviews.json'; // Adjust path if needed

// Optional: sort reviews by date descending
const sortedReviews = reviews.sort((a, b) => new Date(b.date) - new Date(a.date));
---

<Layout title="Customer Reviews">
  <Header />

  <main class="py-8">
    <HeroSection 
      title="Customer Reviews" 
      highlightText="Reviews"
      description="See what our customers are saying about their experience with Green Orbit Digital."
    />
    
    <section class="py-16 bg-white dark:bg-primary-500">
      <div class="container-custom">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedReviews.map((review, index) => (
            <div key={index} class="card p-6 border border-gray-200 dark:border-accent-500">
              <div class="flex items-center mb-4">
                <div class="shrink-0">
                  <img 
                    class="h-12 w-12 rounded-full" 
                    src={review.avatar} 
                    alt={review.author} 
                  />
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{review.author}</h3>
                  <p class="text-sm text-gray-600 dark:text-white">{review.position}, {review.company}</p>
                </div>
              </div>
              
          <div class="mb-6">
            {[...Array(5)].map((_, starIdx) => (
              <svg key={starIdx} class="w-5 h-5 inline-block text-warning-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>

              <p class="text-gray-600 dark:text-white mb-4">"{review.content}"</p>
            </div>
          ))}
        </div>

        <div class="mt-16 text-center">
          <a href="/feedback" class="btn-accent">Share Your Experience</a>
        </div>
      </div>
    </section>

    <!-- Full-Width CTA -->
    <section class="w-full bg-secondary-500 py-16 text-white text-center">
      <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">Ready to collaborate?</h2>
        <p class="mb-8 text-lg sm:text-xl text-gray-200">
          Letâ€™s drive responsible growth for your organisation. Get in touch for a custom package or exploratory call.
        </p>
        <a 
          href="/contact" 
          class="inline-block w-full sm:w-auto px-8 py-4 bg-accent-500 hover:bg-accent-600 text-white font-semibold rounded-lg transition text-lg sm:text-xl"
        >
          Contact Us
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>