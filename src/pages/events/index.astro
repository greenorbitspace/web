---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';
import EventFilters from '../../components/EventFilters.jsx';
import eventsData from '../../data/events.json';
---

<Layout title="Events">
  <Header />

  <main class="py-12 max-w-6xl mx-auto px-4">
    <HeroSection 
      title="Upcoming Events" 
      description="Discover all space, sustainability, and marketing events we are organising or attending." 
    />

    <!-- Lazy-load React component on client -->
    <EventFilters client:load events={eventsData} />
  </main>

  <Footer />
</Layout>