---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/HeroSection.astro';
---

<Layout title="Cookie Policy">
  <Header />

  <main class="py-8">
    <HeroSection 
      title="Cookie Policy" 
      description="Learn how Green Orbit Digital uses cookies and manages your privacy." 
    />

    <section class="py-12 bg-white dark:bg-secondary-500">
      <div class="max-w-6xl mx-auto px-4">
        <div class="overflow-x-auto">
          <table class="min-w-full border border-gray-200 dark:border-gray-700 divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-100 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Cookie Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Purpose</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Duration</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">More Info</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-secondary-500 divide-y divide-gray-200 dark:divide-gray-700">
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">cookieyes-policy</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">Stores your cookie consent preferences</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">1 year</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-500 dark:text-accent-400">
                  <a href="https://www.cookieyes.com" target="_blank" rel="noopener noreferrer">Learn More</a>
                </td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">analytics_cookie</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">Collects anonymous site usage data for analytics</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">2 years</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-500 dark:text-accent-400">
                  <a href="https://www.google.com/analytics/" target="_blank" rel="noopener noreferrer">Learn More</a>
                </td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-gray-100">marketing_cookie</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">Tracks user interactions for marketing campaigns</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-200">6 months</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-accent-500 dark:text-accent-400">
                  <a href="#" target="_blank" rel="noopener noreferrer">Learn More</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <p class="mt-6 text-sm text-gray-600 dark:text-gray-300">
          You can control or disable cookies via your browser settings. For more details, please visit our 
          <a href="/privacy-policy" class="text-accent-500 dark:text-accent-400 hover:underline">Privacy Policy</a>.
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>